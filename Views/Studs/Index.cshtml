@model IEnumerable<WorkShop2.Models.Stud>

@{
    ViewData["Title"] = "Студент";
    Layout = "~/Views/Shared/_LayoutStud.cshtml";
}

<h2>Листа на запишани предмети</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Промени</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Детали</a>
                </td>
            </tr>
        }
    </tbody>
</table>